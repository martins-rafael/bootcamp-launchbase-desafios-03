{% extends "layout.njk" %}

{% block head %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Conte√∫dos</title>
{% endblock %}

{% block content %}
    <div class="title-wraper">
        <h1>Cursos</h1>
    </div>

    <section class="cards">

        {% for item in items %}
            <div class="card-item" id="{{item.id}}">
                <div class="img-wraper">
                    <img src="images/{{item.id}}.svg" alt="{{item.id}} logo">
                </div>
                <div class="info-wraper">
                    <p>{{item.modules}}</p>
                    <p>{{item.price}}</p>
                </div>
            </div>
        {% endfor %}

    </section>

    <script src="js/script.js"></script>
{% endblock %}